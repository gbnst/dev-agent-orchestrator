{
  "name": "basic",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers-contrib/features/apt-packages:1": {
      "packages": "tmux"
    }
  },
  "customizations": {
    "devagent": {
      "injectCredentials": ["github", "anthropic"],
      "defaultAgent": "claude",
      "isolation": {
        "enabled": true,
        "caps": {
          "drop": [
            "NET_RAW",
            "SYS_ADMIN",
            "SYS_PTRACE",
            "MKNOD",
            "NET_ADMIN",
            "SYS_MODULE",
            "SYS_RAWIO",
            "SYS_BOOT",
            "SYS_NICE",
            "SYS_RESOURCE"
          ],
          "add": []
        },
        "resources": {
          "memory": "4g",
          "cpus": "2",
          "pidsLimit": 512
        },
        "network": {
          "allowlist": [
            "api.anthropic.com",
            "sentry.io",
            "*.sentry.io",
            "statsigapi.net",
            "github.com",
            "*.github.com",
            "api.github.com",
            "raw.githubusercontent.com",
            "objects.githubusercontent.com",
            "registry.npmjs.org",
            "pypi.org",
            "files.pythonhosted.org",
            "proxy.golang.org",
            "sum.golang.org",
            "storage.googleapis.com",
            "pkg.go.dev"
          ],
          "allowlistExtend": [],
          "passthrough": [],
          "blockGitHubPRMerge": true
        }
      }
    }
  }
}
